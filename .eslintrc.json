{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "double"],
        "semi-spacing": ["error", {
            "before": false,
            "after": true
        }],
        "comma-spacing": ["error", {
            "before": false,
            "after": true
        }],
        "indent" : ["error", 4]
    }
}
